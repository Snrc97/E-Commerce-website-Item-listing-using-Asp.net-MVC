@model ItemParamViewModel
@{
    ViewData["Title"] = "Item" + Model.Id + " - Ürün Detayları";
}


<div class="container pt-4"> 
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item text-primary"><a class="text-decoration-none" asp-area="" asp-controller="Items" asp-action="Index">Ürünler</a></li>
                    <li class="breadcrumb-item">Ürün Detayları</li>
                    <li class="breadcrumb-item active" aria-current="page">Item @Model.Id</li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="row" align="center">
        <div class="col">
            <div class="row w-75 details-area">
                <div class="col" style="background:#FFF;">
                    <div id="detail-images" class="w-100 h-100">
                        <div id="carouselExample" class="carousel slide">
                            <div class="carousel-inner" >

                                @for (var i = 1; i < 3; i++)
                                {
                                    string imagePath = Url.Content("~/images/items/item" + i + ".png");

                                    <div class="carousel-item @(i == 1 ? "active" : "")">
                                        <div class="d-flex justify-content-center align-items-center p-3" style="height:500px;">
                                            <img src="@imagePath" class="d-block h-auto w-100" alt="item(@i)">
                                        </div>
                                    </div>
                                }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"><i class="fa-solid fa-chevron-left"></i></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"><i class="fa-solid fa-chevron-right"></i></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                            
                           
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="text-start p-3 w-100 h-100">
                        <h5 class="title fs-5">Item @Model.Id</h5>
                        <p class="text-primary fw-bolder">Test</p>
                        <div class="d-flex flex-column">
                            <span id="price-discount" style="font-size:25px; color:gray;"><s>20.000,00₺</s></span>
                            <span id="price" style="font-size:27px; font-weight:bold;" class="text-success">10.000,00₺</span>
                        </div>
                        <div id="rating" class="d-block">
                            <div class="d-flex justify-content-end align-items-center">
                                <div>
                                    <span style="font-size:20px; margin-right:4px;">4,0</span>
                                </div>
                                <div style="font-size:12px;">
                                    <span class="fa fa-star starchecked"></span>
                                    <span class="fa fa-star starchecked"></span>
                                    <span class="fa fa-star starchecked"></span>
                                    <span class="fa fa-star starchecked"></span>
                                    <span class="fa fa-star"></span>
                                </div>
                            </div>
                            <div class="d-flex justify-content-end">
                                <span style="font-size:11px;">510 değerlendirme</span>
                            </div>
                        </div>
                        <div class="w-100 d-flex justify-content-end align-items-end" style="height:55%;">
                            <button class="btn btn-image"><i class="bi bi-cart4 mt-2"></i>Sepete Ekle</button>
                        </div>
                    </div>
                </div>
            </div>
           
         
        </div>
    </div>
</div>


@section scripts
{
    <script async defer charset="ISO-8859-9" src="~/js/Cards/Items/ItemDetails/ItemDetails.js"></script>
}




